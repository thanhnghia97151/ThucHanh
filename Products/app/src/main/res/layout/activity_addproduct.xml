<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="ADD PRODUCT"
        android:textColor="#090909"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editcreatetype"
        android:layout_width="363dp"
        android:layout_height="61dp"
        android:layout_marginTop="80dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:hint="Type"
        android:inputType="textPersonName"
        android:text="Guitar Cordoba Fusion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editcreateprice"
        android:layout_width="358dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        android:text="1000$"
        app:layout_constraintEnd_toEndOf="@+id/editcreatetype"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editcreatetype"
        app:layout_constraintTop_toBottomOf="@+id/editcreatetype" />

    <EditText
        android:id="@+id/editcreatecountry"
        android:layout_width="357dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_place_24"
        android:ems="10"
        android:hint="Country"
        android:inputType="textPersonName"
        android:text="America"
        app:layout_constraintEnd_toEndOf="@+id/editcreateprice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editcreateprice"
        app:layout_constraintTop_toBottomOf="@+id/editcreateprice" />

    <Button
        android:id="@+id/btncreate"
        android:layout_width="355dp"
        android:layout_height="49dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#0B0A0A"
        android:text="create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editcreatecountry" />

    <Button
        android:id="@+id/btnupdatetomanager"
        android:layout_width="350dp"
        android:layout_height="49dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#090909"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btncreate"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btncreate"
        app:layout_constraintTop_toBottomOf="@+id/btncreate"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>