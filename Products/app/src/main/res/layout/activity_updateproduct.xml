<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="UPDATE PRODUCT"
        android:textColor="#070707"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editupdatetype"
        android:layout_width="349dp"
        android:layout_height="59dp"
        android:layout_marginTop="52dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/editupdateprice"
        android:layout_width="351dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editupdatetype"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editupdatetype"
        app:layout_constraintTop_toBottomOf="@+id/editupdatetype" />

    <EditText
        android:id="@+id/editupdatecountry"
        android:layout_width="353dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/ic_baseline_place_24"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editupdateprice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editupdateprice"
        app:layout_constraintTop_toBottomOf="@+id/editupdateprice" />

    <Button
        android:id="@+id/btnsave"
        android:layout_width="347dp"
        android:layout_height="53dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#0B0A0A"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@+id/editupdatecountry"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editupdatecountry"
        app:layout_constraintTop_toBottomOf="@+id/editupdatecountry" />

    <Button
        android:id="@+id/btntomanager"
        android:layout_width="348dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#0B0B0B"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnsave"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>